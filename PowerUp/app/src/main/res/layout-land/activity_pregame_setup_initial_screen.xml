<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/powerup_primary_color"
        android:padding="@dimen/padding_text"
        android:paddingStart="@dimen/padding_text_large"
        android:paddingTop="@dimen/padding_text_large"
        android:text="@string/pregame_setup_title"
        android:textColor="@color/powerup_dark_blue"
        android:textSize="@dimen/final_scene_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/spinner_bg_1"
        android:layout_width="@dimen/bg_width"
        android:layout_height="@dimen/bg_height"
        android:src="@drawable/spinner_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title"
        app:layout_constraintVertical_bias="0.18" />

    <ImageView
        android:id="@+id/spinner_bg_2"
        android:layout_width="@dimen/bg_width"
        android:layout_height="@dimen/bg_height"
        android:src="@drawable/spinner_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title"
        app:layout_constraintVertical_bias="0.18" />

    <ImageView
        android:id="@+id/spinner_bg_3"
        android:layout_width="@dimen/bg_width"
        android:layout_height="@dimen/bg_height"
        android:src="@drawable/spinner_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title"
        app:layout_constraintVertical_bias="0.72" />

    <ImageView
        android:id="@+id/spinner_bg_4"
        android:layout_width="@dimen/bg_width"
        android:layout_height="@dimen/bg_height"
        android:src="@drawable/spinner_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.86" />

    <Spinner
        android:id="@+id/pregame_spinner_1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/spinner_height"
        android:entries="@array/pregame_array_1"
        android:textSize="@dimen/pregame_btn_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title"
        app:layout_constraintVertical_bias="0.20" />

    <Spinner
        android:id="@+id/pregame_spinner_2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/spinner_height"
        android:entries="@array/pregame_array_2"
        android:textColor="@color/powerup_dark_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title"
        app:layout_constraintVertical_bias="0.20" />

    <Spinner
        android:id="@+id/pregame_spinner_3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/spinner_height"
        android:entries="@array/pregame_array_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pregame_spinner_1" />

    <Spinner
        android:id="@+id/pregame_spinner_4"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/spinner_height"
        android:entries="@array/pregame_array_4"
        android:text="@string/teacher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pregame_spinner_2" />

    <ImageView
        android:id="@+id/btn_continue"
        android:layout_width="@dimen/continue_width"
        android:layout_height="@dimen/continue_height"
        android:src="@drawable/continue_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>